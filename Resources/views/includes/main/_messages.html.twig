{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="relative {% if label == 'success' %}bg-green-600{% elseif label == 'warning' %}bg-yellow-600{% elseif label == 'error' %}bg-pink-600{% else %}bg-indigo-600{% endif %}" {{ stimulus_controller('whatwedo/crud-bundle/remove') }}>
            <div class="max-w-7xl mx-auto py-3 px-3 sm:px-6 lg:px-8">
                <div class="pr-16 sm:text-center sm:px-16">
                    <p class="font-medium text-sm text-white">
                        {{ message|trans|raw }}
                    </p>
                </div>
                <div class="absolute inset-y-0 right-0 pt-1 pr-1 flex items-start sm:pt-1 sm:pr-2 sm:items-start">
                    <button data-action="whatwedo--crud-bundle--remove#trigger" class="flex p-2 rounded-md hover:bg-gray-600 hover:bg-opacity-25 focus:outline-none focus:ring-2 focus:ring-white">
                        <span class="sr-only">Ausblenden</span>
                        {{ bootstrap_icon('x-circle', { class: 'h-5 w-5 text-white' }) }}
                    </button>
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}
