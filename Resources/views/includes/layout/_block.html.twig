{% block block %}
    {# @var block \whatwedo\CrudBundle\Block\Block #}
    {# @var view \whatwedo\CrudBundle\View\DefinitionView #}
    {# @var content string #}
    {# TODO size #}

    {% set attr = {
        class: (block.option('size') == constant('whatwedo\\CrudBundle\\Enum\\BlockSize::LARGE') ? 'w-full' : 'w-3/6'),
    }|merge(block.option('attr')|default([])) %}
    <div {{ attr|map((value, attr) => "#{attr}=\"#{value}\"")|join(' ')|raw }}>
        <div class="bg-gray-50 shadow overflow-hidden sm:rounded-lg m-4">
            {% if block.option('label') or block.option('description') %}
                <div class="px-4 py-5 sm:px-6">
                    {% if block.option('label') %}
                        <h3 class="text-lg leading-6 font-medium text-gray-900">
                            {{ block.option('label') }}
                        </h3>
                    {% endif %}
                    {% if block.option('description') %}
                        <p class="mt-1 max-w-2xl text-sm text-gray-500">
                            {{ block.option('description') }}
                        </p>
                    {% endif %}
                </div>
            {% endif %}
            <div class="{% if block.option('label') or block.option('description') %}border-t border-gray-200{% endif%}">
                <dl>
                    {{ content }}
                </dl>
            </div>
        </div>
    </div>
{% endblock %}
