{# @var view \araise\CrudBundle\View\DefinitionView #}
{{ form_start(form, { attr: { id: 'crud_main_form', class: 'whatwedo_crud-form whatwedo_crud-form--create flex-grow mt-5' } }) }}
<h2 class="whatwedo-utility-heading-3 mb-5">{{ title|default('')|trans }}</h2>

    {% if form.vars.errors|length > 0 %}
        <div class="relative mb-5 px-4 py-3 whatwedo-utility-input whatwedo-utility-input--error" role="alert">
            {{ form_errors(form) }}
        </div>
    {% endif %}

<div
    {% if view.definition.hasCapability(constant('araise\\CrudBundle\\Enums\\Page::AJAXFORM')) %}
        {{ stimulus_controller('araise/crud-bundle/ajax-form') }}
        data-ajax-url="{{ path(view.definition.getRoute(constant('araise\\CrudBundle\\Enums\\Page::AJAXFORM')), {
            'case' : 'createmodal',
            'mode' : 'modal'
        }) }}"
    {% endif %}x
    class="whatwedo_crud-blocks whatwedo_crud-blocks--create h-full flex flex-wrap items-baseline gap-4"
>
    {% for block in view.blocks(constant('araise\\CrudBundle\\Enums\\Page::CREATE')) %}
        {{ wwd_crud_render_block(block, view, constant('araise\\CrudBundle\\Enums\\Page::CREATE'), form) }}
    {% endfor %}
</div>

<button type="submit"
        class="whatwedo-crud-button--action !flex mt-5 ml-auto"
    {{ stimulus_action('araise/core-bundle/modal-form', 'submitForm') }}
>
    {{ 'araise_crud.add' | trans }}
</button>

{{ form_end(form) }}
