{% block widget_attributes %}
    {% set widget_class = widget_class|default('block w-full shadow-sm whatwedo_core-input') %}
    {{ parent() }}
{% endblock widget_attributes %}

{%- block checkbox_widget -%}
    {%- set widget_class = widget_class|default('mr-2 focus:ring-primary h-4 w-4 text-primary border-gray-300 rounded') -%}
    {{- parent() -}}
{%- endblock checkbox_widget -%}

{%- block radio_widget -%}
    {%- set widget_class = widget_class|default('mr-2 focus:ring-primary h-4 w-4 text-primary border-gray-300') -%}
    {{- parent() -}}
{%- endblock radio_widget -%}

{% block attributes %}
    {% if type is defined %}
        {%  if type is same as('datetime-local') or type is same as('date') or type is same as('time') %}
            {{ stimulus_controller('whatwedo/core-bundle/datetime') }}
        {% endif %}
    {% endif %}

    {% if choices is defined %}
        {{ stimulus_controller('whatwedo/core-bundle/select') }}
    {% endif %}

    {{ parent() }}
{% endblock attributes %}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <ul>
            {%- for error in errors -%}
                <li class="mb-3 mt-3 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">{{ error.message|trans }}</li>
            {%- endfor -%}
        </ul>
    {%- endif -%}
{%- endblock form_errors -%}

{%- block money_widget -%}
    <div class="space-x-4 hidden sm:flex">
        <div class="w-5/6 px-4 py-2">
            {{ block('form_widget_simple') }}
        </div>
        <div class="w-1/6 px-4 py-2">
            {{ money_pattern|form_encode_currency }}
        </div>
    </div>
{%- endblock money_widget -%}

{%- block percent_widget -%}
    {%- set type = type|default('text') -%}
    <div class="space-x-4 hidden sm:flex">
        <div class="w-5/6 px-4 py-2">
            {{ block('form_widget_simple') }}
        </div>
        <div class="w-1/6 px-4 py-2">
            {% if symbol %} {{ symbol|default('%') }}{% endif %}
        </div>
    </div>
{%- endblock percent_widget -%}
