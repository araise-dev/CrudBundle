{% if view is defined and view.actions|length > 0 %}
    <div aria-label="Aktionen">
        {% for action in view.actions | filter (action => action.getOption('voter_attribute') is null or is_granted(action.getOption('voter_attribute'), view.data)) %}
            {% with {
                action: action,
                view: view,
            } %}
                {{ block(action.option('block_prefix'), view.definition.layout) }}
            {% endwith %}
        {% endfor %}
    </div>
{% endif %}
